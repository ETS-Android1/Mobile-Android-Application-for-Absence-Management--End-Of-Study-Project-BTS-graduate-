<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1mm"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/lblCommNov"
            android:layout_width="36mm"
            android:layout_height="wrap_content"
            android:layout_margin="1mm"
            android:background="#D4E5E3"
            android:text="Est-ce que la documentation est autorisée ?"
            android:textAlignment="center"
            android:textSize="2.5mm" />

        <Button
            android:id="@+id/btnCommPer"
            android:layout_width="match_parent"
            android:layout_height="7.5mm"
            android:layout_gravity="center"
            android:layout_marginLeft="1mm"
            android:background="#D2CD32"
            android:text="محمد أمين مخايبو"
            android:textSize="3mm" />
    </LinearLayout>
</LinearLayout>