<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Subscribe">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="إشتراك"
        android:textColor="#125896"
        android:background="#C0C5C6"
        android:textAlignment="center"
        android:textSize="6mm"
        android:layout_margin="1mm"
        />
    <RelativeLayout
        android:layout_width="47mm"
        android:layout_height="45mm"
        android:layout_marginTop="8mm"
        android:layout_gravity="center"
        >
        <EditText
            android:id="@+id/txtSubPhMai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="#D4E5E3"
            android:textSize="4mm"
            android:hint="هاتف أو بريد إلكتروني"
            />
        <EditText
        android:id="@+id/txtMdp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:inputType="textPassword"
        android:layout_marginTop="1.5mm"
        android:textAlignment="center"
        android:background="#D4E5E3"
        android:textSize="4mm"
        android:hint="القن السري"
        android:layout_below="@id/txtSubPhMai"
        />
        <EditText
            android:id="@+id/txtMdp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="1.5mm"
            android:textAlignment="center"
            android:background="#D4E5E3"
            android:textSize="4mm"
            android:hint="القن السري(إعادة)"
            android:layout_below="@id/txtMdp1"
            />
        <Button
            android:id="@+id/BtnSubscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2mm"
            android:background="#DFB744"
            android:text="إشتراك"
            android:textSize="4mm"
            android:textAlignment="center"
            android:layout_below="@id/txtMdp2"
            />

        <Button
            android:id="@+id/btnReturnToAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8mm"
            android:text="أو أدخل إلى حسابك"
            android:textSize="4mm"
            android:textAlignment="center"
            android:layout_below="@id/BtnSubscribe"
            android:backgroundTint="#fff"

            />

    </RelativeLayout>
    <TextView
        android:layout_width="50mm"
        android:layout_height="17mm"
        android:background="@drawable/btskenitra"
        android:layout_margin="4.5mm"
        />

</LinearLayout>