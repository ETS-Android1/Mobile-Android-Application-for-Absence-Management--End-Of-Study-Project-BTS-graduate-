<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".EmploiTemps">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C5C6"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btnReturnToAcceuil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1.5mm"
            android:src="@drawable/returntoaccueil"
            />
        <TextView
            android:layout_width="45mm"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2mm"
            android:textColor="#125896"
            android:background="#C0C5C6"
            android:textAlignment="center"
            android:textSize="6mm"
            android:layout_margin="1mm"
            android:text="إستعمال الزمن"
            />

    </LinearLayout>



    <!--
    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />-->


    <TableRow
        android:id="@+id/top_row"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.1"
        android:background="#D0F0EC">

        <TextView
            android:id="@+id/spaceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16" />

        <TextView
            android:id="@+id/monday"
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:text="8H->10H"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="12mm"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:text="10H->12H"
            android:layout_marginLeft="0.5mm"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="12mm"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:text="14H->16H"
            android:layout_marginLeft="0.5mm"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/thursday"
            android:layout_width="12mm"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:text="16H->18H"
            android:layout_marginLeft="0mm"
            android:textColor="#000"/>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="#D0F0EC" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:text="Lundi"
            android:textColor="#000"/>


    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="#D0F0EC" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:text="Mardi"
            android:textColor="#000"/>
        <Button
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="1mm"
            android:text="M07+M03;"
            android:textSize="2mm" />
        <Button
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="0mm"
            android:textAlignment="center"
            android:text="DSI 1;D8"
            android:textSize="2mm" />
        <Button
            android:id="@+id/BtnMar_2_4"
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="1mm"
            android:textAlignment="center"
            android:text="M06;\nDSI 1;\nD8"
            android:textSize="2mm" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="#D0F0EC" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:text="Mercredi"
            android:textColor="#000"/>
        <TextView
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="1mm"
            android:textAlignment="center"
            android:text=""
            android:textSize="2mm" />
        <Button
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="1mm"
            android:textAlignment="center"
            android:text="M08;\nDSI 2;\nD9"
            android:textSize="2mm" />
        <Button
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="1mm"
            android:text="Projet de\nDSI 2;"
            android:textSize="2mm" />
        <Button
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="0mm"
            android:textAlignment="center"
            android:text="Fin d'étude;\nD9"
            android:textSize="2mm" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="#D0F0EC" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:text="Jeudi"
            android:textColor="#000"/>
        <TextView
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="1mm"
            android:textAlignment="center"
            android:text=""
            android:textSize="2mm" />
        <TextView
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="1mm"
            android:textAlignment="center"
            android:text=""
            android:textSize="2mm" />
        <Button
            android:layout_width="10mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DFB744"
            android:layout_marginLeft="1mm"
            android:textAlignment="center"
            android:text="M04;\nDSI 1;\nD8"
            android:textSize="2mm" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="#D0F0EC" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:text="Vendredi"
            android:textColor="#000"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:background="#D0F0EC">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:text="Samedi"
            android:textColor="#000"/>
    </TableRow>



</TableLayout>