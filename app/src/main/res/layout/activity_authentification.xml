<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentification">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تسجيل الدخول"
        android:textColor="#125896"
        android:background="#C0C5C6"
        android:textAlignment="center"
        android:textSize="6mm"
        android:layout_margin="1mm"
        />
    <RelativeLayout
        android:layout_width="47mm"
        android:layout_height="40mm"
        android:layout_marginTop="8.5mm"
        android:layout_gravity="center"
        >
        <EditText
            android:id="@+id/txtPhoneMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="#D4E5E3"
            android:textSize="4mm"
            android:hint="هاتف أو بريد إلكتروني"
            />
        <EditText
            android:id="@+id/txtMdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="1.5mm"
            android:textAlignment="center"
            android:background="#D4E5E3"
            android:textSize="4mm"
            android:hint="القن السري"
            android:layout_below="@id/txtPhoneMail"
            />
        <Button
            android:id="@+id/BtnAuthEntrer"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2mm"
        android:background="#DFB744"
        android:text="أدخل"
        android:textSize="4mm"
        android:textAlignment="center"
        android:layout_below="@id/txtMdp"
        />

        <Button
            android:id="@+id/btnGoToSubscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8mm"
            android:text="لا تملك حسابا؟ إشترك الآن"
            android:textSize="4mm"
            android:textAlignment="center"
            android:layout_below="@id/BtnAuthEntrer"
            android:backgroundTint="#fff"

            />

    </RelativeLayout>
    <TextView
        android:layout_width="50mm"
        android:layout_height="20mm"
        android:background="@drawable/btskenitra"
        android:layout_margin="4.5mm"
        />
</LinearLayout>